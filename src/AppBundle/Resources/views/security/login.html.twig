{% extends'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form class="form" method="post" action="{{ path('login_check') }}" accept-charset="UTF-8">
                    <h5 class="text-center">
                        صفحة<span>الأدمين</span>
                    </h5>
                    <p class="text-center text-primary">&copy;جميع الحقوق محفوظة</p>
                    <h6>  تسجيل الدخول الى الموقع .</h6>
                    <div class="ui divider"></div>
                    <div class="form-group">
                        {% if error %}
                            <div class="alert alert-danger">
                                <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                    <i class="tim-icons icon-simple-remove"></i>
                                </button>
                                <span> {{ error.messageKey|replace({"Invalid credentials." : "Les informations d'identification invalides"}) }}</span>
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="_username">البريد الالكتروني :</label>
                        <input type="text" class="form-control" name="_username" value="{{ last_username }}" id="_username" placeholder="البريد الالكتروني" required/>
                    </div>
                    <div class="form-group">
                        <label for="_password">كلمة المرور :</label>
                        <input type="password" class="form-control" name="_password" id="_password" placeholder="كلمة المرور" required/>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
                    <input type="hidden" name="_target_path">
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">تسجيل الدخول</button>
                    </div>
                    <div class="ui divider"></div>
                    <a href="">نسيت كلمة المرور ؟</a>

                    <div class="space-6"></div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}